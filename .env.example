# Server
PORT=4000
NODE_ENV=development
APP_URL=http://localhost:4000

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_SYNC=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# File Uploads
UPLOAD_PROVIDER=local
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

